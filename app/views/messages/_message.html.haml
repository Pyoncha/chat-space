.chat-main__message-lists__message{data: {message: {id: message.id}}}
  .chat-main__message-lists__message__info
    .chat-main__message-lists__message__info__talker
      = message.user.name
    .chat-main__message-lists__message__info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message-list__message__text
    - if message.content.present?
      .chat-main__message-list__message__text__content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message-list__message__text__image' if message.image.present?