.chat-main
  .chat-main__group-info
    .chat-main__group-info__group
      .chat-main__group-info__group__name
        = @group.name
      .chat-main__group-info__group__member
        Member : 
        - @group.users.each do |user|
          = user.name
    .chat-main__group-info__edit-btn
      = link_to edit_group_path(@group), class: "chat-main__group-info__edit-btn__btn" do
        %span<>
        Edit

  .chat-main__message-lists
    = render @messages

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__new-message    
        .chat-main__message-form__new-message__input-box
          = f.text_field :content, class: 'chat-main__message-form__new-message__input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'chat-main__message-form__new-message__input-box__image' do
            = icon('far', 'image', class: 'chat-main__message-form__new-message__input-box__image__icon')
            = f.file_field :image, class: 'chat-main__message-form__new-message__input-box__image__file'
        .chat-main__message-form__new-message__send-btn
          = f.submit 'Send', class: 'chat-main__message-form__new-message__send-btn__btn'
